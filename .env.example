# Environment Variables for LTB Class WebApp
# Copy this file to .env and fill in your values

# Deployment mode: 'local' for classroom, 'cloud' for Render
DEPLOYMENT_MODE=local

# Google Sheets API credentials (JSON string)
# For local dev: leave empty and use google-credentials.json file instead
# For cloud: paste entire contents of google-credentials.json here
# GOOGLE_CREDENTIALS={"type":"service_account","project_id":"..."}

# Port (optional - defaults to 3000 for local, auto-assigned on Render)
# PORT=3000
